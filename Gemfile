source "https://rubygems.org"

ruby '3.2.6'

# Jekyll gems
gem 'jekyll', '~> 4.2.0'
gem 'jekyll-admin'
gem 'jekyll-remote-theme'
gem 'jekyll-paginate'
gem 'webrick'

# Windows platform support for tzinfo-data gem
gem "tzinfo-data", platforms: %i[mswin mswin64 mingw x64_mingw jruby]

# Force bundler to handle Linux platform
platforms :ruby do
  gem 'tzinfo'
end
