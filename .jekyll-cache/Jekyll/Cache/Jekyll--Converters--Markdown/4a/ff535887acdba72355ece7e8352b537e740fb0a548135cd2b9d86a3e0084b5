<script>
  function toggleLaunchDateInput(value) {
    const exactDateGroup = document.getElementById('exactLaunchDateGroup');
    if (value === "Exact Date") {
      exactDateGroup.style.display = 'block';
    } else {
      exactDateGroup.style.display = 'none';
    }
  }
</script>

